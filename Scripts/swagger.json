{
    "swagger": "2.0",
    "info": {
        "title": "Highlight API",
        "description": "API for sending highlights",
        "version": "1.0.0"
    },
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
        "/highlights": {
            "post": {
                "summary": "Send highlights",
                "description": "Send highlights to the server",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "highlights": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Highlights received successfully"
                    }
                }
            }
        }
    }
}
